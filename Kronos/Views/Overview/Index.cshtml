@using Kronos.Infrastructure
@model Kronos.ViewModels.OverviewViewModel


<h1><b>Podgląd ogólny</b></h1>
<hr />

<div class="col-lg-12">
    <div class="row">
        @foreach (var table in Model.Tables)
        {
            <div class="col-lg-4" style="padding: 50px 0px 50px 0px;">                    
                <div class="caption text-center">
                    <h1>
                        <b>Stół nr @table.TableNumber</b>
                    </h1>
                    @if (table.IsFree == true)
                    {
                        <a href="@Url.Action("Details", "Overview", new { id = table.Id })">
                            <img src="\Images\FreeTable.png"/>
                        </a>
                    }
                    else
                    {
                        <a href="@Url.Action("Details", "Overview", new { id = table.Id })">
                            <img src="\Images\BusyTable.png" />
                        </a>
                    }
</div>
            </div>
        }
    </div>
</div>

<script type="text/javascript">

</script>